<table style="width:{page:width}" class="forum" cellpadding="0" cellspacing="{page:cellspacing}">
 <tr>
  <td class="headb" colspan="2">{lang:board} - {lang:stats}</td>
 </tr>
 <tr>
  <td class="leftc" style="width: 50%">{lang:topics}</td>
  <td class="leftb" style="width: 50%">{stats:topics}</td>
 </tr>
 <tr>
  <td class="leftc">{lang:posts}</td>
  <td class="leftb">{stats:posts}</td>
 </tr>
 <tr>
  <td class="leftc">{lang:users}</td>
  <td class="leftb">{stats:users} ({lang:with_posts}: {stats:users_active})</td>
 </tr>
 <tr>
  <td class="leftc">{lang:categories}</td>
  <td class="leftb">{stats:categories}</td>
 </tr>
 <tr>
  <td class="leftc">{lang:boards}</td>
  <td class="leftb">{stats:boards}</td>
 </tr>
 <tr>
  <td class="leftc">{lang:most_active_users}</td>
  <td class="leftb">{stats:toplist}</td>
 </tr>
 <tr>
  <td class="leftc">{lang:longest_thread}</td>
  <td class="leftb"><a href="{url:longest_thread}">{stats:longest_thread}</a> ({stats:longest_thread_posts} {lang:answers})</td>
 </tr>
 <tr>
  <td class="leftc">{lang:average_posts}</td>
  <td class="leftb">{stats:average_posts}</td>
 </tr>
</table>