<div class="quote">
  <table cellpadding="0" cellspacing="0" style="width: 100%">
    <tr>
      <td style="text-align: right; padding: 0; width: 25px">
        <div id="source_{source:id}" style="margin: 0; padding: 0 20px 0 5px">
          {source:numbers}
        </div>
      </td>
      <td style="max-width: 2px">
        <div style="margin: 0; overflow-x: auto; padding: 0">
          <a href="javascript:cs_visible('source_{source:id}')" style="float: right; margin-right: 1px">1. / 2. / ...</a>
          {source:content}
        </div>
      </td>
    </tr>
  </table>
</div>